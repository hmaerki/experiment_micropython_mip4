    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Packager",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/packager/packager.py",
            "args": [
                "--verbose=1",
                "--glob=*.py",
                "--glob=*.txt",
                "app_a",
                "app_b"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}